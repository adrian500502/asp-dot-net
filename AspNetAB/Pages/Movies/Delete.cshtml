@page "{id:int?}"
@model AspNetAB.Pages.Movies.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<style>
    #imghover {
        border-radius: 10px;
        width: 2.5rem;
        height: 4rem;
        box-shadow: 3px 3px 3px #888888;
        transition: all 1.2s;
    }

        #imghover:hover {
            width: 12.5rem;
            height: 20rem;
            box-shadow: 20px 20px 4px #888888;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            Cover Image Path
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Image)
        </dt>
        <dd class="col-sm-10">
            <img id="imghover" class="border-dark" src="~/img/@Html.DisplayFor(model => model.Movie.Image)" alt="Cvr" />
            @*@Html.DisplayFor(model => model.Movie.Image)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Starring)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Starring)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Movie.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-md btn-dark" asp-page="./Index">Back to List</a>
    </form>
</div>
